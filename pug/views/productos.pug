html 
    head 
        meta(name="charset" content="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover")
        title="Lista de Productos"
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")

    body
        div(class="container mt-3")
            h1(class="text-center")="Productos Agregados"
            if conProductos
                table(class="table")
                    thead(class="table-secondary")
                        tr
                            th(scope="col")="#"
                            th(scope="col")="Titulo"
                            th(scope="col")="Precio"
                            th(scope="col")="Imagen"

                        tbody(class="table-secondary")
                            each producto in productos 
                                tr 
                                    td(scope="row")=producto.id 
                                    td=producto.title
                                    td="$" + producto.price
                                    td
                                        img(alt="Imagen Producto" width="35" src=producto.thumbnail)
            else 
                h2(class="text-center")="No hay productos."

            a(href="/" class="btn btn-outline-dark mt-2" role="button")="Agregar Producto"